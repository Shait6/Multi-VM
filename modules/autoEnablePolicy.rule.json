{
  "if": {
    "allOf": [
      { "field": "type", "equals": "Microsoft.Compute/virtualMachines" },
      { "field": "tags['__TAGNAME__']", "equals": "__TAGVALUE__" },
      { "field": "location", "equals": "__REGION__" }
    ]
  },
  "then": {
    "effect": "deployIfNotExists",
    "details": {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "roleDefinitionIds": ["__ROLEDEFID__"],
      "existenceCondition": {
        "field": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems/sourceResourceId",
        "equals": "[field('id')]"
      },
      "deployment": {
        "resourceGroupName": "__VAULT_RG__",
        "properties": {
          "mode": "Incremental",
          "parameters": {
            "vmId": { "value": "[field('id')]" },
            "vaultName": { "value": "__VAULT_NAME__" },
            "vaultResourceGroup": { "value": "__VAULT_RG__" },
            "backupPolicyName": { "value": "__BACKUP_POLICY__" }
          },
          "template": {
            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
              "vmId": { "type": "string" },
              "vaultName": { "type": "string" },
              "vaultResourceGroup": { "type": "string" },
              "backupPolicyName": { "type": "string" }
            },
            "resources": [
              {
                "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
                "apiVersion": "2023-04-01",
                "name": "[concat(
                  parameters('vaultName'),
                  '/Azure/protectionContainers/',
                  concat('VMAppContainer;Compute;', split(parameters('vmId'), '/')[2], ';', split(parameters('vmId'), '/')[4], ';', last(split(parameters('vmId'), '/'))),
                  '/protectedItems/',
                  concat('VM;iaasvmcontainer;Compute;', split(parameters('vmId'), '/')[2], ';', split(parameters('vmId'), '/')[4], ';', last(split(parameters('vmId'), '/')))
                )]",
                "properties": {
                  "protectedItemType": "AzureIaasVMProtectedItem",
                  "sourceResourceId": "[parameters('vmId')]",
                  "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', parameters('vaultName'), parameters('backupPolicyName'))]"
                }
              }
            ]
          }
        }
      }
    }
  }
}
